{
  "manifest_version": 3,
  "name": "Universal Website Log Collector",
  "version": "1.0",
  "description": "Collects client-side logs from any website",
  "permissions": ["activeTab", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["collector.js"],
      "run_at": "document_start"
    }
  ]
}
